<h1>New task</h1>

<%= form_with model: @task do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :details %>
  <%= f.text_area :details %>

  <%= f.label :completed %>
  <%= f.check_box :completed %>

  <%= f.submit "Create Task" %>
<% end %>

<div class="link-container">
  <%= link_to "Back to task list", tasks_path %>
</div>
